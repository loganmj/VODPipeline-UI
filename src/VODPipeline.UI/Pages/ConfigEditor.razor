@page "/config"
@using VODPipeline.UI.Data
@using VODPipeline.UI.Services
@inject VODAPIClient Api
@inject IConfiguration Configuration

<h3>Configuration Editor</h3>

@if (errorMessage != null)
{
    <div class="error-message">
        <p>⚠️ Error loading configuration: @errorMessage</p>
        <div class="editor-actions">
            <a href="/" class="btn-back" aria-label="Return to the pipeline dashboard">Back to Dashboard</a>
        </div>
    </div>
}
else if (config == null)
{
    <p>Loading configuration...</p>
}
else
{
    <ConfigEditorForm Config="@config" HubUrl="@signalRHubUrl" OnConfigUpdated="HandleConfigUpdated" />
}

@code {
    private PipelineConfig? config;
    private string? signalRHubUrl;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            config = await Api.GetConfigAsync();
            signalRHubUrl = Configuration["SignalR:HubUrl"];
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    private async Task HandleConfigUpdated()
    {
        // Reload configuration after update
        try
        {
            config = await Api.GetConfigAsync();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }
}
