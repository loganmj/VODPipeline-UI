@page "/"
@using VODPipeline.UI.Data
@using VODPipeline.UI.Services
@inject VODAPIClient Api

<h3>Pipeline Dashboard</h3>

@if (status == null)
{
    <p>Loading...</p>
}
else
{
    <CurrentJob JobStatus="@status" HubUrl="@signalRHubUrl" />
}

@code {
    private JobStatus? status;
    private string signalRHubUrl = ""; // Configure with actual SignalR hub URL when available

    protected override async Task OnInitializedAsync()
    {
        status = await Api.GetStatusAsync();
    }
}